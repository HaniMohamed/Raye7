<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.proga.hani.raye7.MainActivity">




    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/form_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BBFFFFFF"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/replace"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="10dp"
                android:rotation="90"
                android:src="@drawable/replace" />
        <LinearLayout
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="From"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/etOrigin"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/textview_back"
                android:gravity="center_vertical"
                android:hint="Origin address"
                android:maxLines="5"
                android:padding="5dp" />


        </LinearLayout>

    <LinearLayout
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/from"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="To"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/etDestination"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textview_back"
            android:gravity="center_vertical"
            android:hint="Destination address"
            android:maxLines="5"
            android:padding="5dp" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/to"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#98FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">
        <Button
            android:id="@+id/btnFindPath"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button_back"
            android:elevation="2dp"
            android:text="Take My car"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_distance"/>
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_back"
            android:gravity="center"
            android:padding="3dp"
            android:text="0 km" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_clock"/>
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_back"
            android:gravity="center"
            android:padding="3dp"
            android:text="0 min" />
    </LinearLayout>
</RelativeLayout>
